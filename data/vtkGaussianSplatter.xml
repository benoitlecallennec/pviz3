<ServerManagerConfiguration>
	<ProxyGroup name="filters">
		<SourceProxy name="GaussianSplatter" class="vtkGaussianSplatter" label="GaussianSplatter">
			<Documentation
				long_help="splat points into a volume with an elliptical, Gaussian distribution."
				short_help="splat points with a Gaussian distribution.">
			</Documentation>
			<InputProperty
				name="Input"
				command="SetInputConnection">
				<ProxyGroupDomain name="groups">
					<Group name="sources"/>
					<Group name="filters"/>
				</ProxyGroupDomain>
				<DataTypeDomain name="input_type">
					<DataType value="vtkDataSet"/>
				</DataTypeDomain>
			</InputProperty>
			
			<IntVectorProperty
				name="SampleDimensions"
				label="Sample Dimensions"
				command="SetSampleDimensions"
				number_of_elements="3"
				default_values="50 50 50" >
			</IntVectorProperty>
			
			<DoubleVectorProperty
				name="Radius"
				label="Radius"
				command="SetRadius"
				number_of_elements="1"
				default_values="0.05">
			</DoubleVectorProperty>	  
			
			<DoubleVectorProperty
				name="ScaleFactor"
				label="Scale Factor"
				command="SetScaleFactor"
				number_of_elements="1"
				default_values="0.005">
			</DoubleVectorProperty>	  
		</SourceProxy>
	</ProxyGroup>
</ServerManagerConfiguration>
